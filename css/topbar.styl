.Topbar {
    display: flex;
    align-items: center;
    width: 100%;
    padding: 1rem 4rem;
    background: COLORS.white.main;
    box-shadow: 0 3px 5px rgba(0,0,0,.05);
}

    .Topbar-logo {
        flex: 1;
    }

    .Topbar-nav {
        @media (max-width: 1024px) {
            display: none;
        }
    }

        .Topbar-hamburger {
            @media (max-width: 1024px) {
                padding: .5rem 1rem;
                color: COLORS.black.light;
                font-size: 2rem;
                outline: none;

                &:before {
                    content: "â˜°";
                    -webkit-font-smoothing: none;
                }

                &:hover {
                    cursor: pointer;
                }
            }
        }

    .Topbar-navItem {
        display: inline-block;

        > a {
            font-size: .75rem;
            font-weight: bold;

            &:hover {
                color: COLORS.grey.dark;
            }
        }

        &:not(:last-of-type) {
            margin-right: 2rem;
        }
    }

.Topbar-nav--mobile {
    position: fixed;
    display: flex;
    align-items: center;
    justify-content: center;
    top: 100%;
    width: 100%;
    height: 100%;
    opacity: 0;
    color: #222;
    background: rgba(255,255,255,.95);
    transition: all .3s ease;

    &.is-active {
        top: 0;
        opacity: 1;
    }

    .Topbar-navItem {
        display: block;

        > a {
            font-size: 2em;
            color: COLORS.black.light;

            &:hover {
                color: COLORS.grey.dark;
            }
        }

        &:not(:last-of-type) {
            margin-bottom: 1rem;
        }
    }
}

    .Topbar-navCloseBtn {
        position: absolute;
        top: 5rem;
        right: 5rem;
        color: COLORS.black.light;

        &:hover {
            color: COLORS.grey.dark;
        }
    }